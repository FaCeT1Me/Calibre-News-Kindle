from calibre.web.feeds.news import BasicNewsRecipe

class ThePaperFeatured(BasicNewsRecipe):
    title = '澎湃新闻 - 首页头条'
    oldest_article = 7
    max_articles_per_feed = 50
    language = 'zh'
    encoding = 'utf-8'

    # RSS 源
    feeds = [
        ('澎湃新闻 - 首页头条', 'https://feedx.net/read?r=thepaper')
    ]

    # 自定义样式（可选）
    extra_css = '''
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }
        h1, h2 {
            color: #000;
        }
        a {
            color: #0056b3;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    '''

    # HTML 预处理（可选）
    def preprocess_html(self, soup):
        # 示例：删除页面中可能存在的广告内容
        for ad in soup.find_all(class_='ads'):
            ad.decompose()
        return soup
