from calibre.web.feeds.news import BasicNewsRecipe

class CankaoChina(BasicNewsRecipe):
    title = '参考消息 - 中国栏目'
    oldest_article = 7
    max_articles_per_feed = 30
    language = 'zh'
    encoding = 'utf-8'

    # RSS 源
    feeds = [
        ('参考消息 - 中国栏目', 'https://rsshub.app/cankaoxiaoxi/column/zhongguo')
    ]

    # 自定义样式（可选）
    extra_css = '''
        body {
            font-family: "Microsoft YaHei", Arial, sans-serif;
            line-height: 1.6;
        }
        h1, h2 {
            color: #333;
        }
        a {
            color: #1a73e8;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    '''

    # HTML 预处理（可选）
    def preprocess_html(self, soup):
        # 示例：清理页面中的广告等不需要的内容
        for ad in soup.find_all(class_='ads'):
            ad.decompose()
        return soup
