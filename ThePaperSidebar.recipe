from calibre.web.feeds.news import BasicNewsRecipe

class ThePaperSidebar(BasicNewsRecipe):
    title = '澎湃新闻 - 热榜'
    oldest_article = 7
    max_articles_per_feed = 50
    language = 'zh'
    encoding = 'utf-8'

    # RSS 源
    feeds = [
        ('澎湃新闻 - 热榜', 'https://rsshub.app/thepaper/sidebar')
    ]

    # 自定义样式（可选）
    extra_css = '''
        body {
            font-family: "Microsoft YaHei", Arial, sans-serif;
            line-height: 1.6;
        }
        h1, h2 {
            color: #222;
        }
        a {
            color: #1e90ff;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    '''

    # HTML 预处理（可选）
    def preprocess_html(self, soup):
        # 删除页面中可能存在的广告内容
        for ad in soup.find_all(class_='ads'):
            ad.decompose()
        return soup
